# editorconfig.org
root = true

[**]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[{views/**.pug,static/js/**.js,**.js}]
indent_style = space
indent_size = 2

[node_modules/**.js]
codepaint = false

[{*.json,.*.yml,.*}]
indent_style = space
indent_size = 2
