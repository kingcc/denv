# editorconfig.org
root = true

[{app,css}/**]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[app/**.jade,js/**.js]
indent_style = space
indent_size = 2

[node_modules/**.js]
codepaint = false

[{*.json,.*.yml,.*}]
indent_style = space
indent_size = 2